<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/alivc_dialog_error_bg"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="@string/error_msg"
        android:textColor="@color/alivc_white"
        android:textSize="@dimen/loading_font_size" />

    <TextView
        android:id="@+id/code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="@string/error_code"
        android:textColor="@color/alivc_white"
        android:textSize="@dimen/loading_font_size" />

    <RelativeLayout
        android:id="@+id/retry"
        android:layout_width="82dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/alivc_blue_rr_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/refresh"
            android:drawablePadding="@dimen/error_retry_padding"
            android:gravity="center"
            android:text="@string/retry"
            android:textColor="@color/alivc_blue"
            android:textSize="@dimen/error_font_size" />
    </RelativeLayout>
</LinearLayout>